<div class="container">
  <h2><%= t '.edit' %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label t 'users.shared.email' %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label (t 'shared.username') %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label t 'users.shared.password' %> <i><%= t '.info_pass_blank' %></i><br />
      <%= f.password_field :password, autocomplete: "new-password" %>
      <% if @minimum_password_length %>
        <br />
        <i class="form-text text-muted">(<%= t('users.shared.pass_length', min: @minimum_password_length) %>)</i>
      <% end %>
    </div>

    <div class="field">
      <%= f.label t 'users.shared.password_confirmation' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>

    <div class="field">
      <%= f.label t '.current_password' %> <i><%= t '.info_pass_why' %></i><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit t '.update' %>
    </div>
  <% end %>

  <h3><%= t '.cancel' %></h3>

  <p><%= t '.unhappy' %><%= button_to (t '.cancel_btn'), registration_path(resource_name), data: { confirm: (t '.sure') }, method: :delete %></p>

  <%= link_to (t '.back'), :back %>
</div>
