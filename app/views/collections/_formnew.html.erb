<%= form_for Collection.new, url: user_collections_path(current_user), method: :create do |form| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <p>
    <%= form.label t 'collections.show.name' %><br>
    <%= form.text_field :name %><br>
    <%= t 'collections.show.warning' %>
  </p>
  <p>
    <%= form.label t 'collections.show.description' %><br>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label t 'collections.show.theme' %><br>
    <%= form.select(:theme, Collection.theme.options) %>
  </p>
  <%= form.submit t 'collections.show.create' %>
<% end %>
