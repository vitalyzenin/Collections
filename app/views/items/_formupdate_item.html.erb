<% @collection.items.each do |item| %>
  <div>
    <%= form_for item, url: user_collection_item_path(current_user, @collection, item), method: :put do |form| %>
    <h3><%= t('items.index.item', item_name: item.name) %></h3>
      <p>
        <%= form.label t 'items.index.name' %><br>
        <%= form.text_field :name %><br>
        <i><%= t 'items.index.warning' %></i>
      </p>
      <p>
        <%= form.submit t 'items.index.update', class: "btn" %>
        <%= link_to (t 'items.index.remove'), user_collection_item_path(current_user, @collection, item), method: :delete, data: { confirm: (t 'shared.sure') }, class: "btn btn-danger" %>
        <%= link_to (t 'items.index.view'), user_collection_item_path(current_user, @collection, item) %>
      </p>
    <% end %>
  </div>
<% end %>
