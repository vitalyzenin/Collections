<div class='container'>
  <h1><%= t 'search.items' %></h1>
  <% @items.each do |item| %>
    <div class='container'>
      <h2><%= t('items.index.item', item_name: item.name) %></h2>
      <p>
        <strong><%= t 'items.show.from_col' %></strong>
        <%= item.collection.name %>
      </p>
      <p>
        <strong><%= t 'items.show.tags' %></strong>
        <%= item.tag_list %>
      </p>
      <p>
        <%= link_to (t 'items.index.view'), item_path(item.id) %>
      </p>
    </div>
  <% end %>
</div>
