<h1>Items founded by search</h1>
<% @items.each do |item| %>
    <div>
    <h2><%= t('items.index.item', item_name: item.name) %></h2>
    <%= item.collection.name %></br>
    <%= item.collection.content %></br>
    <%= item.tag_list %>
    <p>
      <%= link_to (t 'items.index.view'), item_path(item.id) %>
    </p>
  </div>
<% end %>
