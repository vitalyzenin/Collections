<div class='container'>
  <h1>Items founded by search</h1>
  <% @items.each do |item| %>
    <div class='container'>
      <h2><%= t('items.index.item', item_name: item.name) %></h2>
      <p><strong><%= 'From collection:' %></strong>
      <%= item.collection.name %></p>
      <p><strong><%= 'Collection description:' %></strong>
      <%= item.collection.content %></p>
      <p><strong><%= 'Tags:' %></strong>
      <%= item.tag_list %></p>
      <p>
        <%= link_to (t 'items.index.view'), item_path(item.id) %>
      </p>
    </div>
  <% end %>
</div>
